extends layout

block content
    div.main-part.pageTitle        
        if ownByEditor
            h1.pageTitle Edytuj artykuł
        else
            h1.pageTitle Edytuj artykuł  użytkownika #{ucfirst(articleAuthor.username)}
    .main-part.subPage
        form(action="/articles/edit/"+article._id, method="POST")
            .form-group
                label Tytuł:
                input.form-control(name="title", type="text", value=article.title)
            .form-group
                label Treść:
                textarea.form-control.form-wider(name="content")= article.content
            if !ownByEditor
                .form-group
                    label Powód edycji:
                    input.form-control(name="reason", type="text")
            input.btn.btn-submit(type="submit", value="Dodaj")